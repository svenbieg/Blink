<?xml version="1.0" encoding="utf-8"?>
<Rule
    Name="ConfigurationTools"
    DisplayName="Tools"
    PageTemplate="generic"
    xmlns="http://schemas.microsoft.com/build/2009/properties">

  <Rule.Categories>
    <Category Name="Tools" DisplayName="Tools" />
  </Rule.Categories>

  <Rule.DataSource>
    <DataSource Persistence="ProjectFile" />
  </Rule.DataSource>

  <StringProperty Name="CompilerName" DisplayName="Compiler" />
  <StringProperty Name="CompilerPath" DisplayName="Compiler-Pfad" />
  <StringProperty Name="GitExe" DisplayName="Git" />
  <StringProperty Name="NinjaExe" DisplayName="Ninja" />
  <StringProperty Name="OpenOcdExe" DisplayName="OpenOCD" />
  <StringProperty Name="PythonExe" DisplayName="Python" />

</Rule>
